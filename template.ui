<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <object class="AdwPreferencesPage" id="prefs_page">
    
    <child>
      <object class="AdwPreferencesGroup" id="extension_menu_group">
        <property name="title">Extension Menu</property>
        <child>
          <object class="AdwActionRow" id="location_row">
            <property name="title">Extension menu location</property>
            <property name="subtitle">Choose where to place the extension menu.</property>
            <child>
              <object class="GtkComboBoxText" id="location_combo">
                <property name="valign">center</property>
                <items>
                  <item id="tray">Tray</item>
                  <item id="system_menu">System Menu</item>
                </items>
              </object>              
            </child>
          </object>
        </child>
        <child>
          <object class="AdwActionRow" id="settings_button_row">
            <property name="title">Settings button</property>
            <property name="subtitle">Enable to show Extension Settings button.</property>
            <child>
              <object class="GtkSwitch" id="settings_button_switch">
                <property name="valign">center</property>
              </object>              
            </child>
          </object>
        </child>
      </object>
    </child>

    <child>
      <object class="AdwPreferencesGroup" id="options_group">
        <property name="title">Options</property>
        <property name="description">Choose which options to keep in the extension menu.</property>
        <!-- The switches for the options have to be declared with javascript. -->
      </object>
    </child>
  </object>
</interface>